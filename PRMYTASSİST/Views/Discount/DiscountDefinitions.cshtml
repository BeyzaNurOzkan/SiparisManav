@using Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    User CurrentUser = Session["CurrentUser"] as User;
    List<Branch> branches = Query.getBranches();
    List<Role> roles = Query.getRoles();

}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg pr-3">
            <div class="row pt-2 mt-2 pb-2 mb-2">
                <div class="col-md-2" style=" align-self: center; ">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="flaticon-list""></i>
                        </span>
                        <h5 class="kt-subheader__title">
                            İndirim Tanımları
                        </h5>
                    </div>
                </div>
                <div class="col-md-10" style=" text-align-last: right; ">
                    <a href="#discountNewModal" class="btn btn-brand btn-icon-sm" data-toggle="modal">
                        <i class="flaticon2-plus"></i> Yeni İndirim Ekle
                    </a>
                </div>
            </div>
        </div>

        <div class="kt-portlet kt-portlet--mobile pt-2">
            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_discount">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Görsel</th>
                            <th>İndirim Adı</th>
                            <th>İndirim Kodu</th>
                            <th>Katsayı</th>
                            <th>Durum</th>
                            <th>Oluşturma Tarihi</th>
                            <th>Kayıt Bilgisi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>

    </div>
</div>

<!--begin::Modal-->
<div class="modal fade " id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="UserInformation"> </h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" method="post" action="/Discount/UpdateDiscount">
                <div class="modal-body">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="kt-portlet__body">
                            <div class="tab-content kt-margin-t-20">
                                <!--Begin:: Tab Content-->
                                <div class="tab-pane active" id="kt_apps_contacts_view_tab_1" role="tabpanel">
                                    <!--begin::Form-->
                                    <div class="kt-portlet__body">
                                        <div class="row">
                                            <input type="hidden" name="currentUser" value="@CurrentUser.ID" />
                                            <div class="col-lg-12" style="text-align-last: left;">
                                                <div class="form-group form-group-marginless kt-margin-t-1" style="align-items: center;">
                                                    <div class="row pb-1 mb-1">
                                                        <input type="hidden" id="userID" name="ID" value="" />
                                                        <label class="col-lg-3 col-form-label" style="align-self:center"><b>İndirim Adı</b></label>
                                                        <div class="col-lg-9">
                                                            <input type="text" id="UserName" name="firstname" class="form-control" style="font-size:11px">
                                                        </div>
                                                    </div>
                                                    <div class="row pb-1 mb-1">
                                                        <label class="col-lg-3 col-form-label pr-1" style="align-self:center"><b>İndirim Kodu</b></label>
                                                        <div class="col-lg-9">
                                                            <input type="text" id="UserLastName" name="lastname" class="form-control" style="font-size:11px">
                                                        </div>
                                                    </div>
                                                    <div class="row pb-1 mb-1">
                                                        <label class="col-lg-3 col-form-label pr-1" style="align-self:center"><b>İndirim Kodu</b></label>
                                                        <div class="col-lg-9">
                                                            <input type="text" id="Coefficient" name="Coefficient" class="form-control" style="font-size:11px">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Form-->
                                </div>
                                <!--End:: Tab Content-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="justify-content:left;">
                    <label class="pr-1"><b>Kayıt:</b></label>
                    <label id="CreatedUser" class="pr-1">Vedat Yüksek </label>
                    <label id="CreatedDate" class="pr-1">07/06/2021 07:26 </label>
                    <label class="pr-1"><b class="pl-3">Güncelleme:</b></label>
                    <label id="UpdateUser" class="pr-1">Admin</label>
                    <label id="UpdateDate" style="margin-right: auto;"><i>09/06/2021 09:46</i></label>

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-warning" onclick="" id="btn1">Kaydet</button>

                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade " id="discountNewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="">Şube Format Bilgileri</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" method="post" action="/Discount/NewDiscount">
                <div class="modal-body">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-toolbar">
                                <ul class="nav nav-tabs nav-tabs-space-lg nav-tabs-line nav-tabs-bold nav-tabs-line-3x nav-tabs-line-brand" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#kt_apps_contacts_view_tab_1" role="tab">
                                            <i class="flaticon2-note"></i> İndirim Bilgileri
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="kt-portlet__body">
                            <div class="tab-content kt-margin-t-20">
                                <!--Begin:: Tab Content-->
                                <div class="tab-pane active" id="kt_apps_contacts_view_tab_1" role="tabpanel">
                                    <!--begin::Form-->
                                    <div class="kt-portlet__body">
                                        <div class="row">
                                            <input type="hidden" name="currentUser" value="@CurrentUser.ID" />
                                            <div class="form-group row form-group-marginless kt-margin-t-1" style="align-items: center;">
                                                <label class="col-lg-3 col-form-label" style="align-self:center">İndirim Adı</label>
                                                <div class="col-lg-9">
                                                    <input type="text" id="DiscountName" name="DiscountName" class="form-control" placeholder="İndirim Adı" style="font-size:11px">
                                                </div>
                                                <label class="col-lg-3 col-form-label" style="align-self:center">İndirim Kodu</label>
                                                <div class="col-lg-9">
                                                    <input type="text" id="DiscountCode" name="DiscountCode" class="form-control" placeholder="İndirim Kodu" style="margin-top: 2px; font-size:11px;">
                                                </div>
                                                <label class="col-lg-3 col-form-label" style="align-self:center">İndirim Katsayısı</label>
                                                <div class="col-lg-9">
                                                    <input type="text" id="Coefficient1" name="Coefficient1" class="form-control" placeholder="Katsayı" style="margin-top: 2px; font-size:11px;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Form-->
                                </div>
                                <!--End:: Tab Content-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="justify-content: flex-end;">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-warning" onclick="" id="btn1">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
