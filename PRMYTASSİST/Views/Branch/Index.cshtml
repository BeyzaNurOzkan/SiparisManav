@using Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    User CurrentUser = Session["CurrentUser"] as User;
    List<User> users = Query.Users();
    List<Branch> branches = Query.Branches();
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <form class="kt-form kt-form--label-right" method="post" action="/Branch/UserAddToBranches">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head-label center pr-3">
                <div class="row pt-2 mt-2 pb-2 mb-2">
                    <div class="col-md-6" style=" align-self: center; ">
                        <div class="row">
                            <div class="col-lg-3 pr-0" style="align-self: center;">
                                <label class="header">
                                    Kullanıcı Seçiniz:
                                </label>
                            </div>
                            <div class="col-lg-6">
                                <select id="branchForUserSelect" class="custom-select form-control" style="color:red; font-weight:bold;" name="currentUser">
                                    @foreach (var item in users.Where(q => q.isDeleted == false))
                                    {
                                        <option value="@item.ID">@item.FirstName.ToUpper() @item.LastName.ToUpper() </option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mt-1" style=" text-align-last: right; ">
                        <a href="/Branch/UpdateBranch" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="icon flaticon-refresh"></i>
                            Güncelle
                        </a>
                        <button type="submit" class="btn btn-warning" onclick="getOrderForUpdate()" id="btn1">Kaydet</button>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body pt-2">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_braches">
                    <thead>
                        <tr>
                            <th>Sıra</th>
                            <th>Sıra</th>
                            <th>Şube Adı</th>
                            <th>Şube Kodu </th>
                            <th>Oluşturma Tarihi</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </form>
</div>

<!--begin::Modal-->
<div class="modal fade " id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="exampleModalLabel">Kullanıcı Bilgileri</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" method="post" action="/User/UpdateProfile">
                <div class="modal-body">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-toolbar">
                                <ul class="nav nav-tabs nav-tabs-space-lg nav-tabs-line nav-tabs-bold nav-tabs-line-3x nav-tabs-line-brand" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#kt_apps_contacts_view_tab_1" role="tab">
                                            <i class="flaticon2-note"></i> Kullanıcı Bilgileri
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="kt-portlet__body">
                            <div class="tab-content kt-margin-t-20">
                                <!--Begin:: Tab Content-->
                                <div class="tab-pane active" id="kt_apps_contacts_view_tab_1" role="tabpanel">
                                    <!--begin::Form-->

                                    <div class="kt-portlet__body">
                                        <div class="row">
                                            <input type="hidden" name="currentUser" value="@CurrentUser.ID" />
                                            <div class="col-lg-9">
                                                <div class="form-group row form-group-marginless kt-margin-t-1" style="align-items: center;">
                                                    <input type="hidden" id="userID" name="ID" value="" />
                                                    <label class="col-lg-1 col-form-label">Adı</label>
                                                    <div class="col-lg-5">
                                                        <input type="text" id="UserName" name="firstname" class="form-control" required>
                                                    </div>
                                                    <label class="col-lg-1 col-form-label pr-1">Soyadı</label>
                                                    <div class="col-lg-5">
                                                        <input type="text" id="UserLastName" name="lastname" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                                <div class="form-group row form-group-marginless kt-margin-t-1" style="align-items: center;">
                                                    <label class="col-lg-1 col-form-label">Kullanıcı Adı</label>
                                                    <div class="col-lg-5">
                                                        <input type="text" id="UserCountName" name="EMail" class="form-control" required >
                                                    </div>
                                                    <label class="col-lg-1 col-form-label">Şifre</label>
                                                    <div class="col-lg-5">
                                                        <input type="text" id="UserPassword" name="password" class="form-control" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="kt-avatar kt-avatar--outline kt-avatar--circle" id="kt_apps_user_add_avatar">
                                                    <div class="kt-avatar__holder" style="background-image: url(&quot;http://keenthemes.com/metronic/preview/default/custom/user/assets/media/users/100_1.jpg&quot;);"></div>
                                                    <label class="kt-avatar__upload" data-toggle="kt-tooltip" title="" data-original-title="Change avatar">
                                                        <i class="fa fa-pen"></i>
                                                        <input type="file" name="profile_avatar" accept=".png, .jpg, .jpeg">
                                                    </label>
                                                    <span class="kt-avatar__cancel" data-toggle="kt-tooltip" title="" data-original-title="Cancel avatar">
                                                        <i class="fa fa-times"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <!--end::Form-->
                                </div>
                                <!--End:: Tab Content-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="justify-content:left;">
                    <label class="pr-1"><b>Kayıt:</b></label>
                    <label id="CreatedUser" class="pr-1">Vedat Yüksek </label>
                    <label id="CreatedDate" class="pr-1">07/06/2021 07:26 </label>
                    <label class="pr-1"><b class="pl-3">Güncelleme:</b></label>
                    <label id="UpdateUser" class="pr-1">Admin</label>
                    <label id="UpdateDate" style="margin-right: auto;"><i>09/06/2021 09:46</i></label>

                    <button type="submit" class="btn btn-warning" onclick="" id="btn1">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>

                </div>
            </form>
        </div>
    </div>
</div>

<!--end::Modal-->
<!--begin:: Global Mandatory Vendors -->
<script src="./assets/vendors/general/jquery/dist/jquery.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        var id = $('#branchForUserSelect').val();
        getBranches(id);
    });
</script>



