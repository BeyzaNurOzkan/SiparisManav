@using Entity

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    User CurrentUser = Session["CurrentUser"] as User;
}

<select hidden id="BranchID" class="custom-select form-control" name="BranchID" style="color: red; font-weight: bold; ">
    <!--  -->
    <option value="@CurrentUser.CurrentBranch"></option>

</select>
<select hidden id="UserID" class="custom-select form-control" name="UserID" style="color: red; font-weight: bold; ">
    <!--  -->
    <option value="@CurrentUser.ID"></option>

</select>
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="row mt-2 mb-2">
                <div class="col-lg-3 col-md-9 col-sm-12 pt-1 pb-2" style=" align-self: center; ">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="flaticon-list"></i>
                        </span>
                        <h5 class="kt-subheader__title">
                            Şube Sipariş Listesi
                        </h5>
                    </div>
                </div>
                <div class="col-lg-7 col-md-9 col-sm-12 " style=" align-self: center; ">
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-2">
                            <div class="input-daterange input-group" id="kt_datepicker_5">
                                <input id="StartDate" type="text" class="form-control" readonly placeholder="" name="start" style="border: 1px solid #0049ff; color: red; font-size: 12px; text-align: center;" value="">
                                <div class="input-group-append" style=" height: 31px; margin-right: -1px; ">
                                    <span class="input-group-text" style="border: 1px solid #0049ff; font-weight: bold; font-size: 15px;">
                                        -
                                    </span>
                                </div>
                                <input id="EndDate" type="text" class="form-control" name="end" style="border: 1px solid #0049ff; font-size: 12px; text-align: center; color: red; " value="">
                            </div>
                        </div>
                        <div class="col-md-2" style=" text-align: right; ">
                            <a onclick="ChangeDateRange()" class="btn btn-warning btn-icon-sm mt-1 mb-2 ListButton" style="padding-right: 6px; padding-top: 6px; padding-bottom: 6px; padding-left: 8px;"><i class="icon-2x text-dark-50 flaticon2-list-2"></i> Listele</a>
                        </div>
                    </div>

                </div>
                <div class="col-lg-2 col-md-9 col-sm-12 pr-0" style=" text-align: right; ">
                    <a href="/Branch/NewOrder" class="btn btn-info btn-icon-sm mt-1 mb-2" style="padding-right: 6px; padding-top: 6px; padding-bottom: 6px; padding-left: 8px;">
                        <i class="flaticon2-plus"></i> Yeni Sipariş Ekle
                    </a>
                </div>
            </div>
        </div>

        <div class="kt-portlet kt-portlet--mobile pt-2 pr-2">
            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover" id="kt_table_getBranchOrderList">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Sipariş No</th>
                            <th>Sipariş Tarihi</th>
                            <th>Şube Adı</th>
                            <th>Kasa Miktarı</th>
                            <th>Ürün Sayısı</th>
                            <th>Kasa Miktarı</th>
                            <th>Adet Miktarı</th>
                            <th>Palet Miktarı</th>
                            <th>Kayıt Bilgisi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>

    </div>
</div>


