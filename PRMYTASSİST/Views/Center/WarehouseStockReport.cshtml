<script src="./assets/vendors/general/jquery/dist/jquery.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        UTCToday();
    });
</script>

<script>
    $(document).ready(function () {
        var dateID = $('#kt_datepicker_3').val();
        getStockProducts(dateID);
    });
</script>
