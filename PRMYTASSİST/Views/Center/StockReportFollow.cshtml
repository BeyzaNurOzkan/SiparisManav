}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg pr-2 mr-2" style="min-height: 40px; justify-content: left; ">
            <div class="row pt-2 mt-2 pb-2 mb-2">
                <div class="col-lg-2 kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="flaticon-list"></i>
                    </span>
                    <h5 class="kt-subheader__title">
                       Depo Stok Listesi
                    </h5>
                </div>
                <div class="col-lg-8 mt-2 mb-2" style=" align-self: center; ">
                    <div class="row">
                        <div class="col-lg-4 pl-0 ml-0 pr-0 mr-0">
                            <div class="input-daterange input-group" id="kt_datepicker_5">
                                <input id="StartDate" type="text" class="form-control" name="start" style="border: 1px solid #0049ff; font-size: 12px; text-align-last: center; color: red; " value="">
                                <div class="input-group-append" style=" height: 30px;; margin-right: -1px; ">
                                    <span class="input-group-text" style="border: 1px solid #0049ff; font-weight: bold; font-size: 15px;">
                                        -
                                    </span>
                                </div>
                                <input id="EndDate" type="text" class="form-control" name="end" style="border: 1px solid #0049ff; font-size: 12px; text-align-last: center; color: red; " value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 " style=" text-align: right;">
                    <a onclick="ChangeDateFollow()" class="btn btn-warning btn-icon-sm ListButton" style="padding-right: 6px; padding-top: 6px; padding-bottom: 6px; padding-left: 8px;"><i class="icon-2x text-dark-50 flaticon2-list-2"></i> Listele</a>

                    <a href="/Center/NewStock" onclick="" class="btn btn-warning btn-icon-sm ListButton" style="padding-right: 6px; padding-top: 6px; padding-bottom: 6px; padding-left: 8px;"><i class="icon-2x text-dark-50 flaticon2-list-2"></i> Yeni Stok Girişi</a>
                </div>

            </div>
        </div>
        <div class="kt-portlet kt-portlet--mobile pt-2">

            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable display" id="table_BuyingProductList">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Belge Numarası</th>
                            <th>Depo Adı</th>
                            <th>Belge Tarihi</th>
                            <th>Ürün Sayısı</th>
                            <th>Kasa Miktarı</th>
                            <th>Adet Miktarı</th>
                            <th>Palet Miktarı</th>
                            <th>Kayıt Bilgisi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
</div>
