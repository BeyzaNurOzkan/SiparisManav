@{
    ViewBag.Title = "StateOrderListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = (int)TempData["id"];
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-subheader   kt-grid__item" id="kt_subheader">
            <div class="row" style=" align-items: center; ">
                <div class="col-md-3">
                    <div class="kt-subheader__main pt-2">
                        <h3 class="kt-subheader__title">
                            Günlük Hal Sipariş -
                        </h3>
                        <input disabled id="orderBranchName" class="pl-0 ml-0 pt-1 pr-0" style="color: red; background-color: transparent; width: 700px; border: 0px; font-size: 13px; font-weight: bold; " type="text" value="0" name="orderBranchName" placeholder="">
                    </div>
                </div>
                <div class="col-md-2 pt-2 pb-2" style=" align-self: center; ">
                    <div class="row">
                        <div class="col-lg-12 pl-0 ml-0 pr-0 mr-0 align-self-center">
                            <div class="input-group date" style="width:100%;">
                                <input disabled name="dateTimeforSOR" type="text" class="form-control" readonly placeholder="" id="kt_datepicker_3" value="" style=" font-size: 12px; color: red; text-align: center;" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="la la-calendar-check-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="row" style=" text-align: right; align-self: center; ">
                        <div class="col-md-4" style=" align-self: center; ">
                            <a class="btn btn-elevate btn-icon-sm pt-0 mt-0">
                                Durumu:
                            </a>
                            <span>
                                <span id="approvalstatus" class="kt-badge  kt-badge--inline kt-badge--pill" style="width: 80px; font-size: 11px; height: 20px; text-align: center;"></span>
                            </span>

                        </div>
                        <div class="col-md-4" style=" align-self: center; ">
                            <a class="btn btn-elevate btn-icon-sm mt-0" style=" align-self: center; font-size: 13px; ">
                                <b>Sipariş No:</b>
                            </a>
                            <input disabled id="orderCodeDet" class="pl-0 ml-0  pt-0 pr-0" style="font-size: 13px; color: red; background-color: transparent; width: 40px; border: 0px; font-size: 13px; font-weight: bold; " type="text" value="0" name="orderCodeDet" placeholder="">
                            <input hidden id="orderCodeDet1" class="pl-0 ml-0  pt-0 pr-0" style="font-size: 13px; color: red; background-color: transparent; width: 40px; border: 0px; font-size: 13px; font-weight: bold; " type="text" value="0" name="orderCodeDet1" placeholder="">

                        </div>
                        <div class="col-md-4" style=" align-self: center; ">
                            <a class="btn btn-elevate btn-icon-sm  mt-0" style=" align-self: center; font-size: 13px;">
                                <b>Sipariş Kalem Sayısı:</b>
                            </a>
                            <input disabled id="productCountTotalOrder" class="pl-0 ml-0 pt-0" style="font-size: 13px; color: red; background-color: transparent; width: 35px; border: 0px; font-size: 13px; font-weight: bold; " type="text" value="0" name="productCountTotalOrder" placeholder="">
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="kt-portlet kt-portlet--mobile pt-2">
            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_getShowBranchOrderListForBranchCenter">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Ürün Grubu</th>
                            <th>Barkodu</th>
                            <th>Ürün Adı</th>
                            <th>Birim</th>
                            <th>Sipariş Miktar</th>
                            <th>Eldeki Stok</th>
                            <th>Kapasite</th>
                            <th>Sipariş Kontrol</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>

    </div>
</div>
<input hidden id="productCountTotal" name="productCountTotal" value="@id" placeholder="">
<script src="./assets/vendors/general/jquery/dist/jquery.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        var orderID = $('#productCountTotal').val();
        backToNewOrder(orderID);
    });
</script>
<script>
    $(document).ready(function () {
        var orderID = $('#productCountTotal').val();
        ProductCountandOrderCode(orderID);
    });
</script>
