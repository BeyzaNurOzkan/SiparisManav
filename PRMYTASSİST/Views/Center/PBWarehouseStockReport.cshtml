                    <a onclick="ChangeDateRangeStock()" class="btn btn-warning btn-icon-sm ListButton" style="padding-right: 6px; padding-top: 6px; padding-bottom: 6px; padding-left: 8px;"><i class="icon-2x text-dark-50 flaticon2-list-2"></i> Listele</a>
                </div>
            </div>
            <div class="kt-portlet kt-portlet--mobile pt-10 pr-2">
                <div class="kt-portlet__body">
                    <!--begin: Datatable -->
                    <table class="table table-striped- table-bordered table-hover" id="kt_table_getPBWareHouseStock">
                        <thead>
                            <tr>
