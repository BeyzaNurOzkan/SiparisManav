@using Entity
@{
    ViewBag.Title = "AddNewCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    User CurrentUser = Session["CurrentUser"] as User;
    List<ProductGroup2> productGroup2s = Query.ProductGroup2s();
    List<ProductGroup3> productGroup3s = Query.ProductGroup3s();
    List<ProductGroup> productGroups = Query.ProductGroups();
    List<ProductGroup4> productGroup4s = Query.ProductGroup4s();
    List<ProductGroup5> productGroup5s = Query.ProductGroup5s();
    List<Product> products = Query.Product();

}


<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg pr-3">
            <div class="row pt-2 mt-2 pb-2 mb-2">
                <div class="col-md-6" style=" align-self: center; ">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="icon flaticon-interface-3"></i>
                        </span>
                        <h5 class="kt-subheader__title">
                            Kategori Tanımları
                        </h5>
                    </div>
                </div>
                <div class="col-md-6" style=" text-align: right; ">
                    <a href="#categoryNewModal" class="btn btn-brand btn-icon-sm" data-toggle="modal">
                        <i class="flaticon2-plus"></i> Yeni Kategori Ekle
                    </a>
                </div>
            </div>
        </div>

        <div class="kt-portlet kt-portlet--mobile pt-2">
            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_newCategory">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Kodu</th>
                            <th>Kategori Adı</th>
                            <th>Oluşturma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>

    </div>
</div>

<!--begin::Modal-->

<div class="modal fade " id="categoryNewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="exampleModalLabel">Kategori Bilgileri</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" method="post" action="/Definition/NewGroup">
                <div class="modal-body">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="kt-portlet__body">
                            <div class="kt-portlet__body">
                                <div class="row">
                                    <input type="hidden" name="currentUser" value="@CurrentUser.ID" />
                                    <div class="col-lg-12">
                                        <div class="form-group row form-group-marginless kt-margin-t-1 pb-2" style="align-items: center;">
                                            <label class="col-lg-2 col-form-label pr-1">Üst Kategori</label>
                                            <div class="col-lg-10">
                                                <div class="form-group pb-0 mb-0">
                                                    <select id="categoryForProductSelect" class="custom-select form-control form-control kt-selectpicker" name="categoryForProductSelect" data-live-search="true">
                                                        <option data-content="" value="0">Ana Kategori Ekle</option>

                                                        @foreach (var item in productGroups)
                                                        {
                                                            <option data-content="" value="@item.ID@item.Code@item.Name">@item.Name.ToUpper()</option>

                                                            foreach (var itemx in item.ProductGroup2s)
                                                            {
                                                                <option data-content="" value="@itemx.ID@itemx.Code@itemx.Name">@item.Name.ToUpper(), @itemx.Name.ToUpper()</option>
                                                                {
                                                                    foreach (var items in itemx.ProductGroups3)
                                                                    {
                                                                        <option data-content="" value="@items.ID@items.Code@items.Name">@item.Name.ToUpper(), @itemx.Name.ToUpper(), @items.Name.ToUpper()</option>
                                                                        foreach (var itemz in items.ProductGroups4)
                                                                        {
                                                                            <option data-content="" value="@itemz.ID@itemz.Code@itemz.Name">@item.Name.ToUpper(), @itemx.Name.ToUpper(), @items.Name.ToUpper(), @itemz.Name.ToUpper()</option>
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row form-group-marginless kt-margin-t-1 pb-2" style="align-items: center;">
                                            <label class="col-lg-2 col-form-label">Kategori Adı</label>
                                            <div class="col-lg-10">
                                                <input type="text" id="categoryName" name="categoryName" class="form-control" placeholder="Kategori Adı" style=" font-size: 11px; ">
                                            </div>
                                        </div>

                                        @*<div class="form-group row form-group-marginless kt-margin-t-1 pb-2" style="align-items: center;">
                                                <label class="col-lg-2 col-form-label pr-1">Kategori Kodu</label>
                                                <div class="col-lg-10">
                                                    <input type="text" id="categoryCode" name="categoryCode" class="form-control" placeholder="Kategori Kodu">
                                                </div>
                                            </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-warning" onclick="" id="btn1">Kaydet</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>



<div class="modal fade " id="groupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="categoryNameOne">Kategori Bilgileri</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" method="post" action="/Definition/UpdateCategory">
                <div class="modal-body pl-0 pb-0">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="kt-portlet__body">
                            <div class="kt-portlet__body">
                                <div class="row">
                                    <input type="hidden" name="currentUser" value="@CurrentUser.ID" />
                                    <div class="col-lg-12">
                                        <input hidden type="text" id="categoryID" name="categoryID" class="form-control">
                                        <input hidden type="text" id="categoryName2" name="categoryName2" class="form-control" placeholder="Kategori Adı">
                                        <input hidden type="text" id="categoryCodeRand" name="categoryCodeRand" class="form-control" placeholder="Kategori Adı">

                                        <div class="form-group row form-group-marginless kt-margin-t-1 pb-2" style="align-items: center;">
                                            <label class="col-lg-3 col-form-label" style="text-align-last: center;">Kategori Adı</label>
                                            <div class="col-lg-9">
                                                <input type="text" id="categoryName1" name="categoryName" class="form-control" placeholder="Kategori Adı" style=" font-size: 11px; ">
                                            </div>
                                        </div>

                                        <div class="form-group row form-group-marginless kt-margin-t-1 pb-2" style="align-items: center;">
                                            @*<label class="col-lg-2 col-form-label pr-1">Kategori Kodu</label>*@
                                            <div class="col-lg-10">
                                                <input hidden type="text" id="categoryCode1" name="categoryCode" class="form-control" placeholder="Kategori Kodu">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-warning" onclick="" id="btn1">Kaydet</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!--end::Modal-->
