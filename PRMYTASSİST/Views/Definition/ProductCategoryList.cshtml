@using Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ProductGroup3> productGroup3s = Query.ProductGroup3s();
    List<Product> products = Query.Product();

}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <form class="kt-form kt-form--label-right" method="post" action="/Definition/ProductCategoryList">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head-label center">
                <div class="kt-portlet__head--lg" style="min-width: 50%; align-self: center;">
                    <div class="row pt-2 mt-2 mb-2 pb-2">
                        <div class="col-lg-1 pr-0" style="align-self: center;">
                            <label class="header">
                                Kategori Seçiniz
                            </label>
                        </div>
                        <div class="col-lg-3" style="align-self: center;">
                            <div class="form-group pb-0 mb-0">
                                <select id="categoryForProductSelect" class="custom-select form-control form-control kt-selectpicker" name="categoryForProductSelect" data-live-search="true">
                                    @foreach (var item in productGroup3s.Where(q => q.isVisible == true))
                                    {
                                        <option data-content=" @item.ProductGroups2.ProductGroups.Name.ToUpper(), @item.ProductGroups2.Name.ToUpper(), <span style='color:red;'>@item.Name.ToUpper()</span>" value="@item.ID"></option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-warning" onclick="checkedCategoryProduct()" id="btn1">Kaydet</button>
                        </div>
                        <div class="col-lg-6 pr-0" style="align-self: center; text-align-last: right;">
                            <a href="/Definition/AddNewCategory" class="btn btn-brand ">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Yeni Kategori Ekle</span>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body pt-2">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_getCategoryProductList">
                    <thead>
                        <tr>
                            <th>İşlem</th>
                            <th>Adı</th>
                            <th>Kodu</th>
                            <th>vbb</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </form>
</div>

<script src="./assets/vendors/general/jquery/dist/jquery.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        var id = $('#categoryForProductSelect').val();
        getProductGroupforCategory(id);
    });
</script>


<script src="./assets/js/demo1/scripts.bundle.js" type="text/javascript"></script>
