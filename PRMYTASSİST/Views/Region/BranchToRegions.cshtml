@using Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    User CurrentUser = Session["CurrentUser"] as User;
    List<BranchFormat> branchFormats = Query.getBranchFormat();
    List<Branch> branches = Query.Branches();
    List<Region> regions = Query.getRegion();
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <form class="kt-form kt-form--label-right" method="post">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head-label center pr-3">
                <div class="row pt-2 mt-2 pb-2 mb-2">
                    <div class="col-md-6" style=" align-self: center; ">
                        <div class="row">
                            <div class="col-lg-3 pr-0" style="align-self: center;">
                                <label class="header">
                                    Format Seçiniz:
                                </label>
                            </div>
                            <div class="col-lg-6">
                                <select id="RegionID" class="custom-select form-control" style="color:red; font-weight:bold;" name="RegionID">
                                    @foreach (var item in regions.Where(q => q.Visible == true))
                                    {
                                        <option value="@item.ID">@item.Name.ToUpper()</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mt-1" style=" text-align-last: right; ">
                        <a href="/Region/BranchToRegionsList" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="icon flaticon-refresh"></i>
                            Şube Format Listesi
                        </a>
                        <button class="btn btn-warning" onclick="addBranchToRegion()" id="btn1">Kaydet</button>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body pt-2">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_brachesFormat">
                    <thead>
                        <tr>
                            <th>Sıra</th>
                            <th>Sıra</th>
                            <th>Şube Adı</th>
                            <th>Şube Kodu </th>
                            <th>Oluşturma Tarihi</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </form>
</div>
<!--begin:: Global Mandatory Vendors -->
<script src="./assets/vendors/general/jquery/dist/jquery.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        getBranchesRegion();
    });
</script>


