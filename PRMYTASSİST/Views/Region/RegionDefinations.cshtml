@using Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    User CurrentUser = Session["CurrentUser"] as User;
    List<Branch> branches = Query.getBranches();
    List<Role> roles = Query.getRoles();

}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 5%;">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg pr-3">
            <div class="row pt-2 mt-2 pb-2 mb-2">
                <div class="col-md-2" style=" align-self: center; ">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="flaticon-list" ></i>
                        </span>
                        <h5 class="kt-subheader__title">
                            Bölge Tanımları
                        </h5>
                    </div>
                </div>
                <div class="col-md-10" style=" text-align-last: right; ">
                    <a href="#RegionNewModal" class="btn btn-brand btn-icon-sm" data-toggle="modal">
                        <i class="flaticon2-plus"></i> Yeni Bölge Ekle
                    </a>
                </div>
            </div>
        </div>

        <div class="kt-portlet kt-portlet--mobile pt-2">
            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_branchRegion">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Görsel</th>
                            <th>Format Adı</th>
                            <th>Durum</th>
                            <th>Oluşturma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                </table>
                <!--end: Datatable -->
            </div>
        </div>

    </div>
</div>

<!--begin::Modal-->
<div class="modal fade " id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="UserInformation"> </h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right">
                <div class="modal-body">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="kt-portlet__body">
                            <div class="tab-content kt-margin-t-20">

                                <!--Begin:: Tab Content-->
                                <div class="tab-pane active" id="kt_apps_contacts_view_tab_1" role="tabpanel">
                                    <!--begin::Form-->
                                    <div class="kt-portlet__body">
                                        <div class="row">
                                            <div class="col-lg-12" style="text-align-last: left;">
                                                <div class="form-group form-group-marginless kt-margin-t-1" style="align-items: center;">
                                                    <div class="row pb-1 ">
                                                        <input type="hidden" id="userID" name="ID" value="" />
                                                        <label class="col-lg-3 col-form-label" style="align-self:center"><b>Bölge Adı</b></label>
                                                        <div class="col-lg-9">
                                                            <input type="text" id="UserName" name="firstname" class="form-control" style="font-size: 11px; text-transform: uppercase;">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12" style="text-align-last: left;">
                                                <div class="form-group row mb-0 " style="align-self:center;">
                                                    <label style="align-self: center;" class="col-4 col-form-label ">Durumu:</label>
                                                    <div style="align-self: center;" class="col-8 ">
                                                        <span style="align-self: center; " class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                                            <label class="mb-0" style="align-self: center;">
                                                                <input id="visibileForRegion" type="checkbox" name="">
                                                                <span></span>
                                                            </label>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Form-->
                                </div>
                                <!--End:: Tab Content-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="justify-content:left;">
                    <button class="btn btn-warning" onclick="SaveAllForRegion()" id="btn1">Kaydet</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade " id="RegionNewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#003366;">
                <h5 class="modal-title" style="color:white;" id="">Şube Format Bilgileri</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" method="post" action="/Region/NewRegion">
                <div class="modal-body">
                    <div class="kt-portlet kt-portlet--tabs">
                        <div class="tab-content kt-margin-t-20">
                            <!--Begin:: Tab Content-->
                            <div class="tab-pane active" id="kt_apps_contacts_view_tab_1" role="tabpanel">
                                <!--begin::Form-->
                                <div class="kt-portlet__body">
                                    <div class="row">
                                        <input type="hidden" name="currentUser" value="@CurrentUser.ID" />
                                        <label class="col-lg-3 col-form-label" style="align-self:center">Bölge Adı</label>
                                        <div class="col-lg-9">
                                            <input type="text" id="RegionName" name="RegionName" class="form-control" placeholder="Bölge Adı" style="font-size: 11px; text-transform: uppercase; ">
                                        </div>
                                    </div>
                                </div>
                                <!--end::Form-->
                            </div>
                            <!--End:: Tab Content-->
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="justify-content: flex-end;">
                    <button type="submit" class="btn btn-warning" onclick="" id="btn1">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="./assets/vendors/general/jquery/dist/jquery.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        getBranchRegion();
    });
</script>
